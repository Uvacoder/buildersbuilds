.hbspt-form
  width:500px
  max-width:100%
  margin:0 auto

  span
    font-weight:300

  input
    width:100%
    margin:5px 0 20px
    -webkit-appearance: none

  input[type="submit"]
    background: $colorSuccess

  .submitted-message
    text-align:center

  textarea
    margin:5px auto
    min-height:200px

  legend
    margin: 5px 0

.hs-form
  fieldset
    max-width: 100% !important
    margin-left: 7px !important

    &.form-columns-1 .hs-input
      width: 100% !important
