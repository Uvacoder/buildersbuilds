{
  "name": "valleydesignbuild",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "hugo:watch": "hugo --theme=vdb --watch --source=src",
    "hugo": "hugo --theme=vdb --source=src",
    "js": "browserify src/app.js -o src/static/app.js -c -g uglifyify",
    "js:watch": "watchify src/app.js -o src/static/app.js --debug --verbose",
    "css": "stylus src/styles/app.styl -o src/static/app.css -c --include node_modules/nib/lib --include-css",
    "css:watch": "stylus -w src/styles/app.styl -o src/static/app.css --include node_modules/nib/lib --include-css",
    "imagemin": "imagemin dist/img/* --out-dir=dist/img",
    "watch": "npm run js:watch & npm run css:watch & npm run hugo:watch & butler",
    "build": "npm run js && npm run css && npm run hugo && npm run imagemin",
    "stats": "browserify src/app.js -c --full-paths | discify --open"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "butler": "^0.4.1",
    "cash-dom": "^1.3.4",
    "gsap": "^1.19.0",
    "nib": "^1.1.2",
    "prismjs": "^1.5.1",
    "skrollr": "^0.6.26",
    "smooth-scroll": "cferdinandi/smooth-scroll",
    "standard": "^8.0.0-beta.5",
    "stylus": "^0.54.5",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
